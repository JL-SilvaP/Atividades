#include <stdio.h>

#define aluno 2

void digitar_notas(float nota1[aluno], float nota2[aluno], float media[aluno], float *media_turma) {
    int i;
    float soma = 0;

    for (i = 0; i < aluno; i++) {
        printf("Digite a primeira nota do aluno %d: ", i + 1);
        scanf("%f", &nota1[i]);

        printf("Digite a segunda nota do aluno %d: ", i + 1);
        scanf("%f", &nota2[i]);

        media[i] = ((nota1[i] * 2) + (nota2[i] * 3)) / 5;
        

        soma += media[i];
    }
    *media_turma = soma / aluno;
    printf("Media da turma: %.2f", *media_turma);

    for ( i = 0; i < aluno; i++){
    if (media[i]>7){
        printf("Aluno %d:\n", i + 1);
        printf("  Primeira nota: %.2f\n", nota1[i]);
        printf("  Segunda nota: %.2f\n", nota2[i]);
        printf("  Media: %.2f\n\n", media[i]);   
    }
    }   
}
int main() {
    float nota1[aluno], nota2[aluno], media[aluno], media_turma;

    digitar_notas(nota1, nota2, media, &media_turma);


    return 0;
}
